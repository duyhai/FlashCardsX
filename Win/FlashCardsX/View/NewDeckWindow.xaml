<Window x:Class="FlashCardsX.View.NewDeckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Deck" Height="300" Width="250" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <StackPanel Width="150" Height="200">
            <Label HorizontalContentAlignment="Center">Name</Label>
            <TextBox HorizontalContentAlignment="Center" Name="NameTextBox"/>
            <Label HorizontalContentAlignment="Center">First topic</Label>
            <TextBox HorizontalContentAlignment="Center" Name="TopicATextBox"/>
            <Label HorizontalContentAlignment="Center">Second topic</Label>
            <TextBox HorizontalContentAlignment="Center" Name="TopicBTextBox"/>
            <Button  Name="CreateButton" Margin="0,10,0,0" Click="CreateButton_Click">
                Create
            </Button>
        </StackPanel>
    </Grid>
</Window>
